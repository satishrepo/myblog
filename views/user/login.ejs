<% include ../header %>



<main>
    <div class="jumbotron">
        <h2>Login here</h2>
        <p>Enter Login Credentials</p>
    </div>
    <%if(typeof locals.errorMessage != 'undefined'){%><p class="alert alert-danger"><%=errorMessage%></p><%}%>
    <div class="row">
    	<form method="POST" action="/user/login">
		  <div class="form-group">
		    <label for="formGroupExampleInput">Username/Email</label>
		    <input type="text" class="form-control"  placeholder="Username OR Email" name="username">
		  </div>
		  
		  <div class="form-group">
		    <label for="formGroupExampleInput2">Password</label>
		    <input class="form-control" type="password" placeholder="Password" name='password'>
		  </div>
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
    </div>
</main>